<h1>Editing submission for Assignment <%= @assignment.id %></h1>
<br />
<br />
<%= form_for @submission do |f| %>
   <%= f.fields_for :submitted_answers do |answer| %>
     <p>
      <h5><%= @assignment.questions.find(answer.object.question_id).question %></h5>
      <br />

      <%= answer.label :given_answer, "Answer" %>
      <%= answer.text_field :given_answer %>
   	 </p>
   <% end %>
   <p><%= f.submit "Save" %></p>
<% end %>

