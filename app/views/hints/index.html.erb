<h1>Listing hints</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Hint</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hints.each do |hint| %>
  <tr>
    <td><%= hint.question %></td>
    <td><%= hint.hint %></td>
    <td><%= link_to 'Show', hint %></td>
    <td><%= link_to 'Edit', edit_hint_path(hint) %></td>
    <td><%= link_to 'Destroy', hint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Hint', new_hint_path %>
